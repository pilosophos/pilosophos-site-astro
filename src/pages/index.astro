---
import BigNavLink from '../components/BigNavLink.astro';
import DefaultLayout from '../layouts/DefaultLayout.astro';
---

<DefaultLayout title="Home">
  <div class="container xl:py-20">
    <div class="lg:grid grid-cols-3 gap-3">
      <main class="col-span-2">
        <nav class="mb-3">
          <ul class="grid gap-3">
            <li><BigNavLink href="/art" label="Art" flavorText="Pictures worth 1000 words"/></li>
            <li><BigNavLink href="/writing" label="Writing" flavorText="Monkey & typewriter not included"/></li>
            <li><BigNavLink href="/support-me" label="Support me" flavorText="How to commission me or buy my art"/></li>
            <li><BigNavLink href="/about" label="About" flavorText="About the guy behind it all"/></li>
          </ul>
        </nav>
        <nav class="text-end">
          <ul class="inline-flex flex-wrap justify-end gap-3">
            <li class="border text-center text-pi-cyan rounded"><a href="" class="px-5 w-full">Email</a></li>
            <li class="border text-center text-pi-cyan rounded"><a href="" class="px-5 w-full">Bluesky</a></li>
            <li class="border text-center text-pi-cyan rounded"><a href="" class="px-5 w-full">Mastodon</a></li>
            <li class="border text-center text-pi-cyan rounded"><a href="" class="px-5 w-full">Instagram</a></li>
            <li class="border text-center text-pi-cyan rounded"><a href="" class="px-5 w-full">Tumblr</a></li>
            <li class="border text-center text-pi-cyan rounded"><a href="" class="px-5 w-full">Pixiv</a></li>
          </ul>
        </nav>
      </main>
      <div class="h-full gap-3 hidden lg:flex">
        <div class="h-full sidebar-decor rounded-lg border border-pi-yellow bg-pi-yellow flex flex-col">
          <div>
            <img src="/images/malaszec-pfp.png" alt="" width="200" class="object-contain"/>
          </div>
          <div class="sidebar-decor grow bg-pi-gray rounded-lg flex items-end p-3">
            <div class="text-end text-stone-500 whitespace-pre-line">
              Oloromnal Graphical Shell for ACROS v2053.06.21-26a31f
