---
const { i, href, label, flavorText, icon } = Astro.props;
---

<a href={ href }
  class="block h-20 flex relative mb-3 items-center hover:font-bold"
  style={{
    left: `-${107 + i*33}px`
  }}
>
  <div class="w-full h-full -skew-x-20 border border-pi-purple border-r-0"></div>
  <div class="ps-7 absolute text-pi-pink flex items-center gap-3">
    <img src={ icon } height="32" class="h-[32px] object-contain"/>
    <div>
      <p class="font-display text-3xl">{ label }</p>
      <p>{ flavorText }</p>
    </div>
  </div>
</a>